<div class="modal">
  <form action="" method="post">
    <fieldset>
      <input type="hidden" name="id" value="{{id}}">
      <table>
        <tr>
          <th scope="row">Title</th>
          <td>
            <input type="text" name="title" value="{{title}}">
          </td>
        </tr>
        <tr>
          <th scope="row">Due Date</th>
          <td>
            <input type="number" name="month" min="1" max="12" placeholder="Month" value="{{getMonth due_date}}"><!--
            --><div></div><!--
            --><input type="number" name="day" min="1" max="31" placeholder="Day" value="{{getDay due_date}}"><!--
            --><div></div><!--
            --><input type="number" name="year" min="1850" max="2200" placeholder="Year" value="{{getYear due_date}}">
          </td>
        </tr>
        <tr>
          <th scope="row">Description</th>
          <td>
            <textarea name="description" placeholder="Description">{{description}}</textarea>
          </td>
        </tr>
        <tr>
          <td></td>
          <td>
            <input type="submit" value="Save">
            <button name="mark_complete" >Mark as Complete</button>
          </td>
        </tr>
      </table>
    </fieldset>
  </form>
</div>
